// Pixel endcap disks material
// Small disks (108 modules)
// 2500 um^2 pixels in 1x2 modules, 10000 um^2 pixels in 2x2 modules

Materials FPIX_disk_2500_10000 {
  type layer

  // Cooling for the module
  // Average on disk
  Component {
    componentName "Cooling: Pipes & Coolant"
    service false
    scaleOnSensor 0
    Element {
      elementName Ti
      quantity 10.21
      unit g
    }
    Element {
      elementName CO2
      quantity 9.69
      unit g
    }
  }
  // fake numbers for calculating conversion with a factor of 1000
  // 8 pipes per disk
  Component {
    componentName "Cooling: Pipes & Coolant"
    service true
    scaleOnSensor 0
    Element {
      elementName FPIX_Ti
      quantity 0.0266
      unit g/m
    }
    Element {
      elementName FPIX_CO2
      quantity 0.026
      unit g/m
    }
  }

  // Power for the module
  // Average on disk
  // 16 power chains per disk
  // 75% of the amount in disk_FPIX : 50% reduction in 2 rings out of 4 (hence reduction is 0.5*0.5 = 0.25)
  Component {
    componentName "Cabling: Serial power chains"
    service false
    scaleOnSensor 0
    Element {
      elementName Al
      quantity 10.14
      unit g
    }
    Element {
      elementName Cu
      quantity 1.38
      unit g
    }
    Element {
      elementName PE
      quantity 3.683
      unit g
    }
  }
  // fake numbers for calculating conversion with a factor of 1000
  // 16 power chains per disk
  // 75% of the amount in disk_FPIX : 50% reduction in 2 rings out of 4 (hence reduction is 0.5*0.5 = 0.25)
  Component {
    componentName "Cabling: Serial power chains"
    service true
    scaleOnSensor 0
    Element {
      elementName FPIX_Al
      quantity 0.073
      unit g/m
    }
    Element {
      elementName FPIX_Cu
      quantity 0.010
      unit g/m
    }
    Element {
      elementName FPIX_PE
      quantity 0.026
      unit g/m
    }
  }

  // HV power lines
  // 16 power chains per disk, 2 HV lines per power chain
  Component {
    componentName "Cabling: High voltage lines"
    service false
    scaleOnSensor 0
    Element {
      elementName Al_HV
      quantity 1.56
      unit g
    }
    Element {
      elementName Cu
      quantity 0.55
      unit g
    }
    Element {
      elementName PE
      quantity 5.6
      unit g
    }
  }
  // fake numbers for calculating conversion with a factor of 1000
  // 16 power chains per disk, 2 HV lines per power chain
  Component {
    componentName "Cabling: High voltage lines"
    service true
    scaleOnSensor 0
    Element {
      elementName FPIX_Al_HV
      quantity 0.0073
      unit g/m
    }
    Element {
      elementName FPIX_Cu
      quantity 0.0026
      unit g/m
    }
    Element {
      elementName FPIX_PE
      quantity 0.0264
      unit g/m
    }
  }



  // Supports Mechanics: Airex foam insert
  // TEMPORARY SCALED FROM EPX (SCALING FACTOR = 0.4), UPDATE THIS!!!
  Component {
    componentName "Supports Mechanics: Dee Foam"
    service false
    scaleOnSensor 0
 
    Element {
      elementName Airex
      quantity 20.8             // 0.4*52 = 20.8 g
      unit g
      // APPROXIMATION: mass spread across a uniform disk cylinder, while there should be holes.
      // thickness approach would be: ~1.7 mm per dee, hence ~ 2*1.7 = 3.4 mm per double-disk. Source: [TEPX_2018_12_07_LC].
    }
  }
 
 
  // Supports Mechanics: PCB panel
  // TEMPORARY SCALED FROM EPX (SCALING FACTOR = 0.4), UPDATE THIS!!!
  Component {
    componentName "Supports Mechanics: Dee PCB panel"
    service false
    scaleOnSensor 0
 
    Element {
      elementName PCB_panel_EPX
      quantity 169.6        // 0.4*424 = 169.6 g
      unit g
      // APPROXIMATION: mass spread across a uniform disk cylinder, while there should be holes for modules.
      // thickness approach would be: ~0.28 mm per panel, hence ~ 4*0.28 = 1.12 mm per double-disk. Source: [TEPX_2018_12_07_LC].
    }

  }
  
    
  // Supports Mechanics: CFRP panel (also called CFK stiffener)
  // TEMPORARY SCALED FROM EPX (SCALING FACTOR = 0.4), UPDATE THIS!!!
  Component {
    componentName "Supports Mechanics: Dee CFRP panel"
    service false
    scaleOnSensor 0
 
    Element {
      elementName CFRP_EPX
      quantity 120          // 0.4*300 = 120 g
      unit g
      // APPROXIMATION: mass spread across a uniform disk cylinder, while there should be holes for modules.
      
      // thickness approach would be as follows (but far more precise because of modules holes).                     
      //quantity 1.2        // 0.5 mm thick CFRP panel, with holes for the modules. Equivalent is set to 0.3 mm thickness (with no hole for modules). 
                            // 1 dee has 2 panels. Hence one double-disk crosses 4 panels through its thickness.
                            // total thickness = 4 * 0.3 = 1.2 mm
                            // Source: [TEPX_2018_12_07_LC].
      //unit mm
    }   
  }

  
  
}
