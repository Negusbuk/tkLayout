// Pixel module common components (no bumps, no cooling blocks, no connectivity)

Component {
  componentName "IT Module: Sensor (active Si)" 
  service false
  scaleOnSensor 0
  Element {
    elementName SenSi
    quantity 0.15       
    unit mm                  // Watch out! all quantities in mm are scaled on the surface of the ACTIVE SENSOR (width x length parameters)
    targetVolume 2
  }
}


Component {
  componentName "IT Module: HDI" 
  service false
  scaleOnSensor 0
  Element {
    elementName IT-HDI-mix  // COMPO NEEDS TO BE CHECKED AND UPDATED. Source: [IT_MODULE_2019_02_07_MB].
    quantity 0.12           // Thickness from Malte Backhaus.
    unit mm                 // Watch out! all quantities in mm are scaled on the surface of the ACTIVE SENSOR (width x length parameters)
    targetVolume 1          // Approximation: All components (layers in HDI + SMD capacitors) all mixed up together into one homogeneous volume.
  } 

}
