// TEPX Mounting.
// Evth from [1].

Component {
  componentName "IT Module: Mounting clamp"
  service false
  scaleOnSensor 0
  Element {
    elementName CFRP_module
    quantity 0.2        // Source: [1]
    unit mm             // Watch out! all quantities in mm are scaled on the surface of the ACTIVE SENSOR (width x length parameters)
    targetVolume 1    
  }
}

Component {
  componentName "IT Module: Screws"  
  service false
  scaleOnSensor 0
  Element {
    elementName CFRP_module
    quantity 0.08      // 4 screws, M1. Source: [1]
    // APPROXIMATION: take same weights for all types of modules.
    unit g
    targetVolume 1     // WARNING: SHOULD SET TARGETVOLUME ON EXTERNAL VOLUME ONLY!!!!
  }
}


Component {
  componentName "IT Module: Thread bushing"
  service false
  scaleOnSensor 0
  Element {
    elementName Brass
    quantity 0.16       // 4 screws, M1 thread bushing. Source: [1]
                        // NB: This was on the disk slide, but divided by number of modules.
    // APPROXIMATION: take same weights for all types of modules.
    unit g
    targetVolume 1     // WARNING: SHOULD SET TARGETVOLUME ON EXTERNAL VOLUME ONLY!!!!
  }
}


Component {
  componentName "IT Module: Airex spacer"
  service false
  scaleOnSensor 0
  Element {
    elementName Airex
    quantity 0.36      // Source: [1]
    // APPROXIMATION: LOCATION
    unit mm            // Watch out! all quantities in mm are scaled on the surface of the ACTIVE SENSOR (width x length parameters)
    targetVolume 1     
  }
}


Component {
  componentName "IT Module: Glue"
  service false
  scaleOnSensor 0
  Element {
    elementName Epoxy
    quantity 0.06     // Source: [1]
    // APPROXIMATION: LOCATION
    unit mm           // Watch out! all quantities in mm are scaled on the surface of the ACTIVE SENSOR (width x length parameters)
    targetVolume 3
  }
}


