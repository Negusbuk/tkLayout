// BPIX Cooling blocks


// 2 x Al-N rails (same for all 1x2 modules)
Component {
  componentName "IT Module: Cooling blocks (AlN rails)"
  service false
  scaleOnSensor 0
  Element {
    elementName AlN
    quantity 0.2        // 2 rails, each is 3.5 mm x 43 mm x 0.2 mm (density used is 3.26 g/cm3). Source: [2]. 
    unit g             
    targetVolume 3      // APPROXIMATION: mass spread across a uniform parallelepiped, while these are 2 rails!
  }
}


// High conductivity CF plate (same for all modules)
Component {
  componentName "IT Module: Cooling blocks (CF plate)"
  service false
  scaleOnSensor 0
  Element {
    elementName CF
    quantity 0.2        // Source: [1]
    unit mm             // Watch out! all quantities in mm are scaled on the surface of the ACTIVE SENSOR (width x length parameters)
    targetVolume 3    
  }
}


// Housing pipe (same for all modules in L1)
// Model (quantity [g/m] = chip power [Watt] * 3)
Component {
  componentName "IT Module: Cooling blocks (housing pipe)"
  service false
  Element {
    scaleOnSensor 0
    elementName Al-CF
    quantity 13.4
    unit g/m
    targetVolume 3
  }
}


// [2] Andrea Basti, "TBPX - weight evaluation".csv , 20/12/2018.
